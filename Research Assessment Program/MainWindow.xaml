<Window x:Class="Research_Assessment_Program.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Research_Assessment_Program.View" 
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="900"  WindowStartupLocation="CenterScreen"  >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <local:ResearcherBasicView Grid.Column="0" x:Name="BasicResearcher"  />
        <local:ResearcherCompleteView Grid.Column="1" x:Name="CompleteResearcher" />
        <local:PublicationCompleteView Grid.Column="2" x:Name="CompletePublication"/>
    </Grid>
</Window>
